{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "...",
  "title": "System Context",
  "description": "Contextual metadata for system level data, typically used to capture data about the local machine.",
  "type": "object",
  "minProperties": 1,
  "properties": {
    "hostname": {
      "type": "string",
      "description": "The system's hostname.",
      "minLength": 1,
      "maxLength": 256
    },
    "ip": {
      "type": "string",
      "description": "The system's IP address (v4 or v6).",
      "minLength": 1,
      "maxLength": 256
    },
    "pid": {
      "type": "integer",
      "description": "The originating process ID as defined by the `pid` command in Unix.",
      "minimum": 1
    },
    "process_name": {
      "type": "string",
      "description": "The originating process name.",
      "minLength": 1,
      "maxLength": 256
    }
  },
  "additionalProperties": false
}